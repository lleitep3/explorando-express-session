<header>
  <!-- Fixed navbar -->
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">APP Usuários</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/me"> Meu Perfil</a>
          </li>
        </ul>
        <div class="text-end">
          <% if (locals.isLogged) { %>
            <span class="text-white">Olá <%- locals.user.name %> &nbsp;</span>
            <a href="logout" class="btn btn-outline-light me-2">Sair</a>
            <% } else { %>
              <a href="login" class="btn btn-outline-light me-2">Entrar</a>
              <a href="register" class="btn btn-warning">Cadastro</a>
              <% } %>
        </div>
      </div>
    </div>
  </nav>
